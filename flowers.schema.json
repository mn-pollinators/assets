{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "flowers": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9_])+$"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "description": "This flower's common name.",
            "type": "string",
            "not": {
              "pattern": "\\bor\\b",
              "description": "If there are two common names, pick one, rather than joining both names together with 'or'."
            }
          },
          "sci_name": {
            "description": "This flower's scientific name",
            "type": "string",
            "pattern": "^[A-Z][a-zäëïöüÿ\\-]* [a-z][a-zäëïöüÿ\\-]+$",
            "$comment": "See https://www.iapt-taxon.org/nomen/pages/main/art_60.html for the precise structure of scientific names."
          },
          "relative_size": {
            "description": "Roughly how large this flower is compared to an average flower. 1 is normal, 0.1 is small, and 10 is big.",
            "type": "number",
            "minimum": 0,
            "maximum": 10
          },
          "art_file": {
            "type": "string",
            "pattern": "^[0-9a-zA-Z\\._-]+.(png|PNG|jp[e]?g|JP[E]?G|tif[f]?|TIF[F]?)$"
          },
          "photo_files": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "filename": {
                  "type": "string",
                  "pattern": "^[0-9a-zA-Z\\._-]+.(png|PNG|jp[e]?g|JP[E]?G|tif[f]?|TIF[F]?)$"
                },
                "attribution": {
                  "type": "string"
                },
                "caption": {
                  "type": "string"
                },
                "image_link": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "required": [
                "filename",
                "attribution",
                "caption",
                "image_link"
              ],
              "additionalProperties": false
            }
          },
          "blooming_period": {
            "description": "A list of date ranges when this flower is blooming, in the form of ISO 8601 fragments like `--05-01/--06-30`.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": [
              {
                "type": "string",
                "pattern": "--\\d\\d-\\d\\d/--\\d\\d-\\d\\d"
              }
            ]
          },
          "description": {
            "type": "object",
            "properties": {
              "summary": {
                "description": "A paragraph describing this flower.",
                "type": "string"
              },
              "bees_attracted": {
                "description": "A human-readable list of what bees collect pollen from this flower.",
                "type": "string"
              }
            },
            "required": ["summary"],
            "additionalProperties": false
          }
        },
        "required": [
          "name",
          "sci_name",
          "relative_size",
          "art_file",
          "photo_files",
          "blooming_period",
          "description"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "version",
    "flowers"
  ],
  "additionalProperties": false
}
